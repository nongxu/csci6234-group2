Empty -> Order : 1: calculatePrice
Order -> Order : 5: calculateBasePrice()\n6: calculateDiscounts()
Order -> OrderLine : 2: getQuantity()\n3: getProduct()
Order -> Product : 4: getPricingDetails
Order -> Customer : 7: getDiscountInfo

@enduml